<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.QuickFragment">

    <View
        android:id="@+id/timerEdtView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/text_view"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/timerEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingTop="@dimen/_4sdp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintBottom_toBottomOf="@+id/timerEdtView"
        app:layout_constraintEnd_toEndOf="@id/timerEdtView"
        app:layout_constraintTop_toTopOf="@id/timerEdtView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/one"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toStartOf="@id/two"
        app:layout_constraintTop_toBottomOf="@id/timerEdtView"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/two"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="2"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toStartOf="@id/three"
        app:layout_constraintTop_toBottomOf="@id/timerEdtView"
        app:layout_constraintStart_toEndOf="@id/one" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/three"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="3"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintTop_toBottomOf="@id/timerEdtView"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/four"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="4"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/five"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/five"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="5"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/six"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintStart_toEndOf="@id/four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/six"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="6"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintTop_toBottomOf="@id/three"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seven"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="7"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/five"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/eight"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="8"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/six"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintStart_toEndOf="@id/four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nine"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="9"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintTop_toBottomOf="@id/six"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dot"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:visibility="invisible"
        android:text="."
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/zero"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/zero"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@id/six"
        app:layout_constraintTop_toBottomOf="@id/eight"
        app:layout_constraintStart_toEndOf="@id/four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/_20sdp"
        android:text="CLR"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintTop_toBottomOf="@id/nine"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="@dimen/_7sdp"
        android:text="START"
        android:fontFamily="@font/poppins_medium"
        android:backgroundTint="@color/red"
        android:paddingHorizontal="@dimen/_40sdp"
        android:paddingVertical="@dimen/_7sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>